<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Incident Number"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/incidentV2_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:text="123"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:text="Incident Address"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/incidentV2_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"
            android:text="ddd"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:text="@string/longitude"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:text="ddd"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="260dp"
            android:text="@string/latitude"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="280dp"
            android:text="ddd"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="320dp"
            android:text="@string/current_address"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/current_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="340dp"
            android:text="ddd"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/startTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorStart"
                android:onClick="onClick"
                android:text="@string/start_task"
                android:textColor="@android:color/background_light"
                android:visibility="visible" />

            <Button
                android:id="@+id/finishTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorFinish"
                android:text="@string/finish_task"
                android:textColor="@android:color/background_light"
                android:visibility="gone" />

            <TextView
                android:id="@+id/taskFinished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/task_finished"
                android:textColor="@color/colorTaskFinished"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>